%h1 住所一覧

%table
  %tr
    %th 住所
    %th 操作
  - @addresses.each do |address|
    %tr
      %td
        = "#{address.postcode}#{address.prefecture}#{address.city}#{address.address1}#{address.address2}"
      %td
        = link_to '変更', edit_address_path(address.id)
      %td
        = link_to '削除', address_path(address.id), method: :delete

= link_to '追加', new_address_path

= link_to '戻る', mypages_path
